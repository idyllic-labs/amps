{
  "name": "@idyllic-labs/amps",
  "version": "0.1.0-alpha.5",
  "description": "Scriptable AI agents defined in Markdown. Write an .mdx file, get a tool-calling agent with a TUI.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/idyllic-labs/amps"
  },
  "keywords": [
    "ai",
    "agent",
    "mdx",
    "llm",
    "cli",
    "bun",
    "typescript",
    "tool-calling"
  ],
  "packageManager": "bun@1.1.29",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "amps": "./bin/amps.js"
  },
  "files": [
    "bin/",
    "packages/cli/bin/",
    "packages/agent/src/",
    "packages/agent/bin/",
    "packages/workflow/src/",
    "packages/workflow/bin/",
    "examples/",
    "scripts/",
    "CLAUDE.md"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "postinstall": "bash scripts/patch-pi-ai.sh",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "lint": "oxlint packages/ bin/ --ignore-path .gitignore",
    "format": "oxfmt --write packages/ bin/",
    "test": "bun test packages/agent/tests/",
    "format:check": "oxfmt --check packages/ bin/",
    "amps": "bun run bin/amps.js"
  },
  "dependencies": {
    "@mariozechner/pi-agent-core": "0.51.2",
    "@mariozechner/pi-ai": "0.51.2",
    "@mariozechner/pi-tui": "0.51.2",
    "commander": "^14.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "turbo": "latest",
    "typescript": "^5.0.0"
  }
}
